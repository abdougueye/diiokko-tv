<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A2E"
                android:endColor="#0F3460"
                android:angle="135"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Accent line at bottom -->
    <item android:bottom="0dp" android:top="168dp">
        <shape android:shape="rectangle">
            <solid android:color="#E94560"/>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
        </shape>
    </item>
    
    <!-- Logo text background glow -->
    <item android:gravity="center" android:top="40dp" android:bottom="50dp">
        <shape android:shape="oval">
            <solid android:color="#20E94560"/>
            <size android:width="200dp" android:height="80dp"/>
        </shape>
    </item>
</layer-list>
