<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DiokkoPlayer" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/diokko_deep_purple</item>
        <item name="android:colorBackground">@color/diokko_deep_purple</item>
        <item name="android:colorPrimary">@color/diokko_highlight</item>
        <item name="android:colorPrimaryDark">@color/diokko_purple</item>
        <item name="android:colorAccent">@color/diokko_highlight</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.DiokkoPlayer.Fullscreen" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.DiokkoPlayer.Splash" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
